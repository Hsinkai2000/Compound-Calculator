<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/ETDuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="74dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:hint="@string/duration"
        android:focusedByDefault="true"
        android:inputType="numberDecimal"
        android:paddingBottom="5dp"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="Duration:" />


    <com.dd.processbutton.FlatButton
        android:id="@+id/button_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/ETDuration"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="150dp"
        android:layout_weight="3"
        android:background="@color/colorSecondary"
        android:text="Save"
        custom:pb_colorNormal="@color/colorSecondary"
        custom:pb_colorPressed="@color/colorSecondaryDark" />

    <com.dd.processbutton.FlatButton
        android:id="@+id/button_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ETDuration"
        android:layout_alignTop="@+id/button_accept"
        android:layout_gravity="center_horizontal"
        android:layout_weight="3"
        android:background="@color/colorSecondary"
        android:text="Cancel"
        custom:pb_colorNormal="@color/colorSecondary"
        custom:pb_colorPressed="@color/colorSecondaryDark" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorSecondaryDark">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Duration"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
</RelativeLayout>